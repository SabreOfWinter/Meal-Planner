= form_for @plan_meal do |f|
  - if @plan_meal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@plan_meal.errors.count, "error")} prohibited this plan_meal from being saved:"
      %ul
        - @plan_meal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :meal
    = f.text_field :meal
  .field
    = f.label :dayplan
    = f.text_field :dayplan
  .actions
    = f.submit 'Save'
