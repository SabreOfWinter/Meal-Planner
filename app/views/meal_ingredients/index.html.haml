%h1 Ingredients of Meals

%table
  %thead
    %tr
      %th Ingredient
      %th Meal
      %th Amount
      %th User
      %th
      %th

  %tbody
    - @meal_ingredients.each do |meal_ingredient|
      %tr
        %td= Ingredient.find(meal_ingredient.ingredient_id).name
        %td= meal_ingredient.meal.name
        %td= meal_ingredient.amount
        %td= User.find(meal_ingredient.user_id).email
        %td= link_to 'Show', meal_ingredient
        %td= link_to 'Edit', edit_meal_ingredient_path(meal_ingredient)
        %td= link_to 'Destroy', meal_ingredient, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Meal ingredient', new_meal_ingredient_path
