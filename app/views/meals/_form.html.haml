= form_for @meal do |f|
  - if @meal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meal.errors.count, "error")} prohibited this meal from being saved:"
      %ul
        - @meal.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :recipe
    = f.text_area :recipe
  .field
    = f.label :public
    = f.check_box :public
  .field
    = f.label :user
    = f.text_field :user, value: current_user.id, disabled: true
  .actions
    = f.submit 'Save'
